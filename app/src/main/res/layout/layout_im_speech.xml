<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speech_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.acj.assistanttouchview.FloatButtonLayout
        android:id="@+id/layout_talk"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.acj.assistanttouchview.SpeechButton
            android:id="@+id/speech_button"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:clickable="true"/>

    </com.acj.assistanttouchview.FloatButtonLayout>

    <com.acj.assistanttouchview.FloatTalkView
        android:id="@+id/dialog_speech_talk"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>